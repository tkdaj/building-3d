# config documentation: https://editorconfig.org/

# .prettierrc file uses config from here, so we don't
# specify the following within .prettierrc since they're set here:

# "endOfLine"
# "useTabs"
# "tabWidth"
# "printWidth"

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
max_line_length = 100
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
